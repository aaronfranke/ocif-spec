{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "@ocif/node/rect",
  "description": "Rectangle node extension",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "const": "@ocif/canvas/viewport"
    },
    "position": {
      "type": "array",
      "description": "Coordinate as (x,y) or (x,y,z).",
      "items": {
        "type": "number"
      }
    },
    "size": {
      "type": "array",
      "description": "The size of the viewport per dimension.",
      "items": {
        "type": "number"
      }
    }
  },
  "required": [ "type", "position", "size" ]
}
